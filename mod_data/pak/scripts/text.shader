// TEXT.SHADER
// 
// This file contains shaders that are used to draw text elements.
//


text/default_text
{
	nopicmip
	nomipmaps
	{
		map gfx/2d/fonts/default_font.tga
		blendFunc GL_SRC_ALPHA GL_ONE_MINUS_SRC_ALPHA
		rgbgen vertex
	}
}

